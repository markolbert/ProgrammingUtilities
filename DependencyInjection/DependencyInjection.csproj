<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	  <TargetFramework>net5.0</TargetFramework>
	  <AssemblyName>J4JSoftware.DependencyInjection</AssemblyName>
	  <RootNamespace>J4JSoftware.DependencyInjection</RootNamespace>
	  <Nullable>enable</Nullable>
	  <Authors>Mark A. Olbert</Authors>
	  <Company>Jump for Joy Software</Company>
	  <Product>J4JSoftware Dependency Injection Library</Product>
	  <Description>provides customized HostBuilder and CompositionRoot classes for simplified configuration</Description>
	  <Copyright>Â© Mark A. Olbert all rights reserved</Copyright>
	  <PackageDescription>provides customized HostBuilder and CompositionRoot classes for simplified configuration</PackageDescription>
	  <RepositoryUrl>https://github.com/markolbert/ProgrammingUtilities</RepositoryUrl>
	  <PackageLicenseExpression>MIT</PackageLicenseExpression>
	  <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
	  <PackageIcon>Diego nuspec.png</PackageIcon>
	  <RepositoryType>git</RepositoryType>
	  <Version>0.8.0.0</Version>
	  <AssemblyVersion>0.8.0.0</AssemblyVersion>
	  <PackageReleaseNotes>initial public release</PackageReleaseNotes>
    <Configurations>Debug;Release;NuGetRelease</Configurations>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Autofac" Version="6.1.0" />
    <PackageReference Include="Autofac.Configuration" Version="6.0.0" />
    <PackageReference Include="Autofac.Extensions.DependencyInjection" Version="7.1.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="5.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="5.0.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="5.0.1" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="5.0.0" />
    <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="5.0.0" />
    <PackageReference Include="Microsoft.AspNetCore.DataProtection" Version="5.0.2" />
  </ItemGroup>

	<Choose>
		<When Condition=" '$(Configuration)' == 'NuGetRelease' ">
			<ItemGroup>
				<PackageReference Include="J4JSoftware.Logging" Version="3.0.0" />
				<PackageReference Include="J4JSoftware.Logging.Autofac" Version="3.0.0" />
			</ItemGroup>
		</When>
		<Otherwise>
			<ItemGroup>
				<ProjectReference Include="..\..\J4JLogging\AutoFacJ4JLogging\AutofacJ4JLogging.csproj" />
				<ProjectReference Include="..\..\J4JLogging\J4JLogging\J4JLogging.csproj" />
			</ItemGroup>
		</Otherwise>
	</Choose>

	<ItemGroup>
		<None Include="E:\Pix\JumpForJoy\Diego nuspec.png">
			<Pack>True</Pack>
			<PackagePath></PackagePath>
		</None>
	</ItemGroup>
</Project>
